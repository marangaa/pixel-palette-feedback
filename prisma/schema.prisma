generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id            String   @id @default(cuid())
  userId        String
  sessionId     String
  messages      Json // Stores the array of message objects
  extractedData Json // Stores the extracted data object
  timestamp     DateTime @default(now())

  @@index([userId])
  @@index([sessionId])
}
